{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "ListBucketOnPrefixes",
        "Effect": "Allow",
        "Action": ["s3:ListBucket"],
        "Resource": "arn:aws:s3:::lg-urban-prod",
        "Condition": {
          "StringLike": {
            "s3:prefix": ["input/*", "output/*"]
          }
        }
      },
      {
        "Sid": "ReadInputDatasets",
        "Effect": "Allow",
        "Action": ["s3:GetObject"],
        "Resource": "arn:aws:s3:::lg-urban-prod/input/*"
      },
      {
        "Sid": "WriteInputDatasets",
        "Effect": "Allow",
        "Action": ["s3:PutObject", "s3:DeleteObject"],
        "Resource": "arn:aws:s3:::lg-urban-prod/input/datasets/*"
      },
      {
        "Sid": "RWOutput",
        "Effect": "Allow",
        "Action": ["s3:PutObject", "s3:GetObject"],
        "Resource": "arn:aws:s3:::lg-urban-prod/output/*"
      }
    ]
  }